.home-handler
  padding 2rem 0
  color: #222
  +route-handler()
    h2
      padding-right 0.5rem
      display inline-block
      font-size 4rem
    .animated-text-group
      position relative
      .border
        content-fill()
        border-bottom 2px solid #aaa
        animation-name border-grow
        animation-fill-mode both
        animation-timing-function ease-in-out
      .animated-text-group-child
        display inline-block
        animation drop-in 100ms ease-in-out
        animation-fill-mode both
    p
      color #666
      font-size 2rem
      line-height @font-size * 1.6
      strong
        color #000
        font-weight 300
    a
      text-decoration none
      color #888
      font-weight 100
      border-bottom 1px solid #000
    .col
      col(1/3)
