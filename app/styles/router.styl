.router
  display block
  position relative
  min-height 100%

  .route-enter, .route-leave
    display block
    position absolute
    top 0
    left 0
    transition all 350ms ease-in-out

  .route-enter
    opacity 0
    transform translateY(-15vh)
    &.route-enter-active
      opacity 1
      transform translateY(0vh)

  .route-leave
    opacity 1
    transform translateY(0vh)
    &.route-leave-active
      opacity 0
      transform translateY(15vh)
